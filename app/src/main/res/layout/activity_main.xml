<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jasonngo.utils.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jasonngo.views.JNButton
            android:layout_width="363dp"
            android:layout_height="wrap_content"/>

        <com.jasonngo.views.JNTextInputView
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            app:hint="@string/app_name"
            app:title="@string/sf_ui_display_regular"
            app:titleColor="#33000000"/>

        <com.jasonngo.views.JNImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
