<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mInputRootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.jasonngo.views.JNTextView
        android:id="@+id/mInputTextView"
        style="@style/TextViewStyle"
        android:textColor="#212121"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/mInputContentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.jasonngo.views.JNEditView
            android:id="@+id/mInputEditView"
            style="@style/EditTextStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#212121" />

        <ImageButton
            android:id="@+id/mInputShowPassword"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_eye_hide"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>